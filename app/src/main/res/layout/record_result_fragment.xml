<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_record_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_recordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/record_sidebar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/sidebars" />

            <TextView
                android:id="@+id/record_txt_ranknum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="11dp"
                android:text="#8"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/record_sidebar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/record_txt_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="솔로랭크"
                android:textColor="#000000"
                android:textSize="7dp"
                app:layout_constraintStart_toStartOf="@+id/record_txt_ranknum"
                app:layout_constraintTop_toBottomOf="@+id/record_txt_ranknum" />

            <TextView
                android:id="@+id/record_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="5일 전"
                android:textColor="#000000"
                android:textSize="7dp"
                app:layout_constraintStart_toStartOf="@+id/record_txt_mode"
                app:layout_constraintTop_toBottomOf="@+id/record_txt_mode" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/charImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/char_10portrait" />

            <TextView
                android:id="@+id/record_txt_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="14"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/charImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="레벨"
                android:textColor="#000000"
                android:textSize="8dp"
                app:layout_constraintEnd_toEndOf="@+id/record_txt_level"
                app:layout_constraintStart_toStartOf="@+id/record_txt_level"
                app:layout_constraintTop_toBottomOf="@+id/record_txt_level" />

            <TextView
                android:id="@+id/charName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="14sp"
                android:text="캐릭터이름"
                android:textColor="#000000"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="@+id/charImage"
                app:layout_constraintStart_toStartOf="@+id/charImage"
                app:layout_constraintTop_toBottomOf="@+id/charImage" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/record_txt_kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="2 / 0 / 1"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>