<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Record"
            android:layout_width="385dp"
            android:layout_height="430dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/Solo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solo"
            app:layout_constraintBottom_toTopOf="@+id/Record"
            app:layout_constraintStart_toStartOf="@+id/Record"
            app:layout_constraintTop_toTopOf="@+id/Record" />

        <Button
            android:id="@+id/Duo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duo"
            app:layout_constraintBottom_toTopOf="@+id/Record"
            app:layout_constraintStart_toEndOf="@+id/Solo"
            app:layout_constraintTop_toTopOf="@+id/Record" />

        <Button
            android:id="@+id/Squad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Squad"
            app:layout_constraintBottom_toTopOf="@+id/Record"
            app:layout_constraintStart_toEndOf="@+id/Duo"
            app:layout_constraintTop_toTopOf="@+id/Record" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Summary"
            android:layout_width="385dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:background="#653F3F"
            app:layout_constraintBottom_toTopOf="@+id/Record"
            app:layout_constraintEnd_toEndOf="@+id/Record"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/Record">


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/Rankgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rankgame"
            app:layout_constraintBottom_toTopOf="@+id/Summary"
            app:layout_constraintStart_toStartOf="@+id/Summary"
            app:layout_constraintTop_toTopOf="@+id/Summary" />

        <Button
            android:id="@+id/Normalgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomalgame"
            app:layout_constraintBottom_toTopOf="@+id/Summary"
            app:layout_constraintStart_toEndOf="@+id/Rankgame"
            app:layout_constraintTop_toTopOf="@+id/Summary" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Profile"
            android:layout_width="385dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/Summary"
            app:layout_constraintEnd_toEndOf="@+id/Summary"
            app:layout_constraintStart_toStartOf="@+id/Summary">

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--






            -->
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>