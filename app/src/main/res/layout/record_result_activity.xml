<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_topBar"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#F7F7F7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="9dp"
            android:layout_height="18dp"
            android:layout_marginStart="17dp"
            android:layout_weight="1"
            android:background="@drawable/ic_back1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_search"
            android:layout_width="19dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_baseline_search_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_topBar">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_steam"
            android:layout_width="85dp"
            android:layout_height="22dp"
            android:layout_marginStart="11dp"
            android:background="@drawable/ic_steam"
            android:drawableLeft="@drawable/ic_steam_logo"
            android:paddingLeft="5dp"
            android:text="스팀 바로가기"
            android:textColor="#FFFFFF"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_renew"
            app:layout_constraintStart_toEndOf="@+id/btn_renew"
            app:layout_constraintTop_toTopOf="@+id/btn_renew" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_renew"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/ic_renew"
            android:text="전적 갱신"
            android:textColor="#FFFFFF"
            android:textSize="9sp"
            app:layout_constraintStart_toStartOf="@+id/profile_rank"
            app:layout_constraintTop_toBottomOf="@+id/profile_rank" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/adriana16" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:text="수혁짱짱123"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="상위 111,111위(상위 1%)"
            android:textSize="7sp"
            app:layout_constraintStart_toStartOf="@+id/profile_text"
            app:layout_constraintTop_toBottomOf="@+id/profile_text" />

        <TextView
            android:id="@+id/profile_averRank"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="33dp"
            android:text="#1"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/profile_name" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="37dp"
            android:layout_height="12dp"
            android:text="평균등수"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/profile_averRank"
            app:layout_constraintStart_toStartOf="@+id/profile_averRank"
            app:layout_constraintTop_toBottomOf="@+id/profile_averRank" />

        <TextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="데미안 V"
            android:textSize="7sp"
            app:layout_constraintStart_toStartOf="@+id/profile_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_summary"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_profile">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_past"
            android:layout_width="63dp"
            android:layout_height="11dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_past_btn"
            android:text="과거"
            android:textSize="7sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_season1"
            android:layout_width="63dp"
            android:layout_height="11dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/ic_season_btn"
            android:text="시즌1"
            android:textSize="7sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_past"
            app:layout_constraintStart_toEndOf="@+id/btn_past"
            app:layout_constraintTop_toTopOf="@+id/btn_past" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>